@model Website.Models.Authorization.RegisterModel 
<!--Установка заголовков страницы-->
@{ ViewBag.Title = "Регистрация"; }

<!--Форма регистрации-->
<form class="form" method="post">
    <h3>Регистрация</h3>
    <div class="form_errors_list" asp-validation-summary="All"></div>
    <p>Email:</p>
    <input class="form_input" asp-for="@Model.Email" type="email" />
    <p>Пароль:</p>
    <input class="form_input" asp-for="@Model.Password" type="password" />
    <p>Подтвердите пароль:</p>
    <input class="form_input" asp-for="@Model.VerifyPassword" type="password" />
    <input class="button form_button" type="submit" value="Регистрация" />
</form>