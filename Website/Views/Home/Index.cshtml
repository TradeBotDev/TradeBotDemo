    ViewBag.Title = "Главная страница";
    ViewBag.SectionTitle = "Представляем нашего бота";

    if (ViewBag.HaveLicense == null || !ViewBag.HaveLicense)
    {
        <form action="/purchase/buy">
            <input type="submit" value="Купить" />
        </form>
    }
    else
    {
        <p>Вы уже обладаете лицензией на данный продукт.</p>
    }
}